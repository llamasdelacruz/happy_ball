<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/iniciobg">




    <EditText
        android:id="@+id/LblNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Escribe tu nombre"
        android:textColor="#12C3C9"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/BtnEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LblNombre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="35dp"
        android:text="Guardar"
        android:hint="Editar"
        android:onClick="evento"
        />

    <TextView
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BtnEditar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="309dp"
        android:layout_marginEnd="-5dp"
        android:text="Record"
        android:textAlignment="center"
        android:textColor="#F78D70"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BtnEditar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp"
        android:editable="false"
        android:text="Mejor puntuaciÃ³n"
        android:textColor="#FECC6F"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/BtnSkins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TxtScore"
        android:layout_marginBottom="-161dp"
        android:onClick="verSkins"
        android:text="Skins"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/BtnInicio"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TxtScore"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="-160dp"
        android:layout_toEndOf="@+id/BtnSkins"
        android:onClick="startGame"
        android:text="Iniciar"
        android:textSize="35sp"
        android:textStyle="bold" />


</RelativeLayout>
